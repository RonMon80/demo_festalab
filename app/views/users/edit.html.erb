<div class="container">
  <div class="row">
    <div class="col">
      <h1>Editing user</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= render "form", user: @user %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <div class="btn-group">
        <%= link_to "Show this user", @user, class: "btn btn-success m-2" %>
