<div class="container">
  <div class="row">
    <div class="col">
      <p style="color: green"><%= notice %></p>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= render @user %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <div class="btn-group">
        <%= link_to "Edit this user", edit_user_path(@user), class: "btn btn-warning m-2" %>
        <%= link_to "Back to users", users_path, class: "btn btn-info m-2" %>
        <%= button_to "Delete this user", @user, method: :delete, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger m-2" %>
      </div>
    </div>
  </div>
</div>
