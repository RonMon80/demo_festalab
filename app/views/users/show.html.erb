<div class="container">
  <div class="row">
    <div class="col">
      <p style="color: green"><%= notice %></p>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= render @user %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <div class="btn-group">
        <%= link_to "Edit this user", edit_user_path(@user), class: "btn btn-info" %>
        <%= link_to "Back to users", users_path, class: "btn btn-primary" %>
        <%= button_to "Destroy this user", @user, method: :delete, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>

