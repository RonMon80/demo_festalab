<div class="container">
  <div class="row">
    <div class="col">
      <p style="color: green"><%= notice %></p>
      <h1>Users</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td>
                <%= link_to "Show", user, class: "btn btn-success btn-sm" %>
                <%= link_to "Edit", edit_user_path(user), class: "btn btn-warning btn-sm" %>
                <%= link_to "Delete", user, method: :delete,   data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} , class: "btn btn-danger btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= link_to "New user", new_user_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
